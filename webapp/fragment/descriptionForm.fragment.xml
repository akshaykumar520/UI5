<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<f:SimpleForm id="detailsform" title="Product Details" layout="ResponsiveGridLayout">
		<f:content>
			<core:Title text="Product Info"/>
			<Label text="Product ID"></Label>
			<Text text="{ProductID}"></Text>
			<Label text="Type Code"></Label>
			<Text text="{TypeCode}"></Text>
			<Label text="Category"></Label>
			<Text text="{Category}"></Text>
			<Label text="Name"></Label>
			<Text text="{Name}"></Text>
			<Label text="Language"></Label>
			<Text text="{NameLanguage}"></Text>
			<Label text="Description"></Label>
			<Text text="{Description}"></Text>
			<Label text="Supplier ID"></Label>
			<Text text="{SupplierID}"></Text>
			<Label text="Supplier Name"></Label>
			<Text text="{SupplierName}"></Text>
			<core:Title text="Dimensions and Price"/>
			<Label text="Weight(KG)"></Label>
			<Text text="{WeightMeasure}"></Text>
			<Label text="Width(CM)"></Label>
			<Text text="{Width}"></Text>
			<Label text="Depth(CM)"></Label>
			<Text text="{Depth}"></Text>
			<Label text="Height(CM)"></Label>
			<Text text="{Height}"></Text>
			<Label text="Price(USD)"></Label>
			<Text text="{Price}"></Text>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>